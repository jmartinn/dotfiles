# Ghostty theme
theme = dark:TokyoNight Night,light:Rose Pine Dawn
# theme = Catppuccin Mocha

# Shell integrations
shell-integration-features = no-cursor,sudo,no-title
quit-after-last-window-closed = true

# Font family
font-family = JetBrainsMonoNL Nerd Font
font-style = Regular
font-style-italic = Regular Italic
font-style-bold = Bold
font-style-bold-italic = Bolt Italic

# Font size
font-size = 16

# Opacity of split windows
unfocused-split-opacity = 0.97

# Background opacity fully opaque
background-opacity = 1

# Cursor style
cursor-style = block
cursor-style-blink = true

# Clipboard settings
clipboard-read = allow
clipboard-write = allow

# macOS options
macos-option-as-alt = true
macos-titlebar-style=transparent
macos-titlebar-proxy-icon = hidden

# Always show 'ghostty' as the title
title = ghostty

# Window settings
window-padding-balance = true 
window-save-state = always
window-colorspace = "display-p3"

# Cell height
adjust-cell-height = 10%

# Mouse settings
mouse-hide-while-typing = true
mouse-scroll-multiplier = 2
keybind = shift+enter=text:\x1b\r
